{{> navigation}}
<div class="main-content">
    <div class="container mt-5">
        <h2>Add New Employee</h2>
        {{#if errors.length}}
        <div class="alert alert-danger">
            <ul>
                {{#each errors}}
                <li>{{this.msg}}</li>
                {{/each}}
            </ul>
        </div>
        {{/if}}
        <form action="/add-employee" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="{{formData.name}}">
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Phone</label>
                <input type="text" class="form-control" id="phone" name="phone" value="{{formData.phone}}">
            </div>
            <div class="mb-3">
                <label for="secret" class="form-label">Secret</label>
                <input type="password" class="form-control" id="secret" name="secret" value="{{formData.secret}}">
            </div>
            <button type="submit" class="btn btn-primary">Add Employee</button>
        </form>
    </div>
</div>
